{% extends "layouts/COM_layout.twig" %}

{% block content %}

<div class="site-content" style="transform: none;">
    {# Block Articles à la Une #}
    <div class="atbs-ceris-block atbs-ceris-block--fullwidth atbs-ceris-block-custom-margin ceris-grid-e atbs-ceris-post--grid-c-update clearfix  ">
        <div class="container the-heading-size-md">
            <div class="block-heading has-block-heading-line-around" style="border-color: #222222;">
                <h4 class="block-heading__title" style="color: #222222;">Articles à la une</h4>
            </div>
        </div><!-- .container -->
        <div class="atbs-ceris-block__inner">
            <div class="post-main">
                <div class="owl-background-item">
                    <div class="owl-background-item-left owl-item-img"></div>
                    <div class="owl-background-item-front owl-item-img"></div>
                    <div class="owl-background-item-right owl-item-img"></div>
                </div>
                <div class="owl-carousel js-carousel-2i30m atbs-ceris-carousel dots-circle nav-circle owl-loaded">
                    {% for article in articles %}
                        <div class="item">
                            <div class="slide-content">
                                <article class="post post-no-thumb-title-line remove-margin-bottom-lastchild" data-bgColor="{{ article.categories[0].colors.background }};">
                                    <div class="post__thumb" data-background="{{ urlApi }}{{ article.image.url }}"></div>
                                    <div class="post__text ">
                                        <div class="post__text--wrap">
                                            <a class="post__cat post__cat--bg cat-theme-bg" href="{{ t('routes./category.translation') }}/{{ article.categories[0].slug }}" style="background-color: {{ article.categories[0].colors.background }};">{{ article.categories[0].title }}</a>
                                            <h3 class="post__title typescale-2">
                                                <a href="{{ t('routes./article.translation') }}/{{ article.slug }}">{{ article.title }}</a>
                                            </h3>
                                        </div>
                                    </div>
                                </article>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {# End Block Articles à la Une #}

    <div class="block-wrapper pb-0 pt-3">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-12">
					<div class="banner-img">
						<a href="index.html">
							<img class="img-fluid" src="http://demo.themewinter.com/html/digiqole/images/banner-image/image3.png" alt="">
						</a>
					</div>
				</div>
				<!-- col end -->
			</div>
			<!-- row  end -->
		</div>
		<!-- container end -->
	</div>

    {# Block Articles #}
    <div class="atbs-ceris-block atbs-ceris-block--fullwidth atbs-ceris-block-custom-margin posts-listing-grid-no-sidebar atbs-ceris-posts--vertical-text-not-fullwidth  atbs-custom-margin-top-60">
        <div class="container">
            <div class="atbs-ceris-block__inner">
                <div class="posts-list post-list row row--space-between grid-gutter-40 items-clear-both-3">
                    {% for article in articles %}
                        <div class="col-md-4 col-sm-6 list-item">
                            <article class="post post--vertical   ceris-post-vertical--cat-overlay post--vertical-text-not-fullwidth  ">
                                <div class="post__thumb ">
                                    <a href="{{ t('routes./article.translation') }}/{{ article.slug }}">
                                        <img width="400" height="300" src="{{ urlApi }}{{ article.image.url }}" class="attachment-ceris-xs-4_3 size-ceris-xs-4_3 wp-post-image" alt="">
                                    </a>
                                    <a class="cat-8 post__cat post__cat--bg cat-theme-bg" href="{{ t('routes./category.translation') }}/{{ article.categories[0].slug }}" style="background-color: {{ article.categories[0].colors.background }};">{{ article.categories[0].title }}</a>
                                </div>
                                <div class="post__text ">
                                    <h3 class="post__title typescale-2">
                                        <a href="{{ t('routes./article.translation') }}/{{ article.slug }}">{{ article.title }}</a>
                                    </h3>
                                    <div class="post__excerpt ">
                                        <div class="excerpt">{{ article.content[0].value | raw }}</div>
                                    </div>
                                </div>
                            </article>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {# End Block Articles #}

    <div class="block-wrapper no-padding">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-10">
					<div class="banner-img">
						<a href="index.html">
							<img class="img-fluid" src="http://demo.themewinter.com/html/digiqole/images/banner-image/image4.png" alt="">
						</a>
					</div>
				</div>
				<!-- col end -->
			</div>
			<!-- row  end -->
		</div>
		<!-- container end -->
	</div>

    {# Block Categories #}
    <div class="atbs-ceris-block atbs-ceris-block--fullwidth atbs-ceris-block-custom-margin posts-listing-grid-b-no-sidebar atbs-ceris-posts-latest--overlay  atbs-custom-margin-top-60">
        <div class="container">
            <div class="container the-heading-size-md">
                <div class="block-heading block-heading--style-10">
                    <h4 class="block-heading__title" style="color: #222222;">Articles par catégories</h4>
                </div>
            </div>
            <div class="atbs-ceris-block__inner">
                <div class="posts-list post-list row row--space-between grid-gutter-40 items-clear-both-3">
                    {% for category in menu.categories %}
                        {% if category.published %}
                            <div class="col-md-3 col-sm-6 list-item">
                                <article class="post--overlay  post--overlay-bottom post--overlay-floorfade posts-has-smaller-post-cat post--overlay-md post--overlay-top-bottom">
                                    <div class="post__thumb post__thumb--overlay atbs-thumb-object-fit ">
                                        <a href="{{ t('routes./category.translation') }}/{{ category.slug }}">
                                            <img width="600" height="600" src="{{ urlApi }}{{ category.image.cover.url }}" class="attachment-ceris-s-1_1 size-ceris-s-1_1 wp-post-image" alt="">
                                        </a>
                                    </div>
                                    <div class="post__text inverse-text">
                                        <div class="post__content-section">
                                            <div class="post__text-wrap">
                                                <div class="post__text-inner ">
                                                    <h3 class="post__title typescale-2">
                                                        <a href="{{ t('routes./category.translation') }}/{{ category.slug }}">{{ category.title }}</a>
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <a href="{{ t('routes./category.translation') }}/{{ category.slug }}" class="link-overlay"></a>
                                </article>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {# End Block Categories #}

    <div class="block-wrapper pb-0 pt-3">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-12">
					<div class="banner-img">
						<a href="index.html">
							<img class="img-fluid" src="http://demo.themewinter.com/html/digiqole/images/banner-image/image3.png" alt="">
						</a>
					</div>
				</div>
				<!-- col end -->
			</div>
			<!-- row  end -->
		</div>
		<!-- container end -->
	</div>
</div>
{% endblock %}

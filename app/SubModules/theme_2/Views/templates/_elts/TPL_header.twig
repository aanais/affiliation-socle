
<header class="main_header" style="background-color: {{ menu.colors.background }}">
    <div class="container">
        <div class="row">
            <div class="main_header_logo col-6 col-md-2">
                <a href="/">
                    {% if customization.logo_header.url %}
                        <img src="{{ urlApi }}{{ customization.logo_header.url }}" alt="Logo {{ config.base.siteName }}">
                    {% else %}
                        <p>{{ customization.title }}</p>
                    {% endif %}
                </a>
            </div>

            <nav id="navigation" class="col-12 col-md-10">
                <button class="hamburger hamburger--collapse d-sm-block d-md-none d-lg-none" type="button">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
                <ul class="main_header_menu">
                    {% for category in menu.categories %}
                        {% if category.published %}
                            <li class="main_header_menu_item">
                                <a href="{{ t('routes./category.translation') }}/{{ category.slug }}"
                                   class="main_header_menu_link">
                                    {{ category.title }}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                    {% for post in menu.posts %}
                        {% if post.published %}
                            <li class="main_header_menu_item">
                                <a href="{{ t('routes./article.translation') }}/{{ post.slug }}"
                                   class="main_header_menu_link">
                                    {{ post.title }}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                    {% for page in menu.pages %}
                        {% if page.published %}
                            <li class="main_header_menu_item">
                                <a href="{{ t('routes./page.translation') }}/{{ page.slug }}"
                                   class="main_header_menu_link">
                                    {{ page.title }}
                                </a>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>
</header>

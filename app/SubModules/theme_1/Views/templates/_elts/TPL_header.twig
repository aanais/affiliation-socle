<header class="main_header" >
    <div class="main_header_logo col-md-3 col-sm-6 col-xs-6" >
        {% if customization.logo_header.url %}
            <a href="/" style="background-image: url('{{ urlApi }}{{ customization.logo_header.url }}')"></a>
        {% else %}
            <p>{{ customization.title }}</p>
        {% endif %}
    </div>

    <nav id="navigation" class="col-md-9">
        <button class="hamburger hamburger--emphatic d-sm-block d-md-none d-lg-none" type="button">
            <span class="hamburger-box">
                <span class="hamburger-inner"></span>
            </span>
        </button>
        <ul class="main_header_menu d-md-flex">
            {# DISPLAY CATEGORIES #}
            {% for cat in menu.categories %}
                <li class="main_header_menu_item">
                    <a href="{{ t('routes./category.translation') }}/{{ cat.slug }}" class="main_header_menu_link">
                        {{ cat.title }}
                    </a>
                </li>
            {% endfor %}
            {# DISPLAY PAGES #}
            {% for page in menu.pages %}
                <li class="main_header_menu_item">
                    <a href="/{{ cat.slug }}" class="main_header_menu_link">
                        {{ cat.title }}
                    </a>
                </li>
            {% endfor %}
            {# DISPLAY POSTS #}
            {% for post in menu.posts %}
                <li class="main_header_menu_item">
                    <a href="{{ t('routes./article.translation') }}/{{ post.slug }}" class="main_header_menu_link">
                        {{ post.title }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    </nav>
</header>
